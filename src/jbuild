(library
 ((name ppx_inline_test)
  (public_name ppx_inline_test)
  (kind ppx_rewriter)
  (ppx_runtime_libraries (ppx_inline_test.runtime-lib))
  (flags (:standard -safe-string))
  (libraries (ppx_core
              ppx_driver
              ppx_inline_test_libname))
  (preprocess (pps (ppx_metaquot ppx_driver.runner)))
  (inline_tests.backend
   ((runner_libraries (ppx_inline_test.runner.lib))
    (gen (echo "let () = Ppx_inline_test_lib.Runtime.exit ();;"))
    (flags (inline-test-runner ${library-name}
             -source-tree-root ${ROOT} -diff-cmd -))))))

(jbuild_version 1)
